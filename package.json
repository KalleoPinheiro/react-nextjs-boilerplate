{
  "name": "react-nextjs-boilerplate",
  "description": "Boilerplate utilizando Typescript, React, NextJS, Styled Components e muito mais!",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn clean; next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0 --fix",
    "test": "jest --config ./.jestrc.json",
    "test:watch": "yarn test -- --watch",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public",
    "commit": "git-cz",
    "clean": "rm -rf ./node_modules ./.next; yarn cache clean; yarn"
  },
  "dependencies": {
    "next": "10.0.3",
    "next-pwa": "^3.1.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-essentials": "6.1.9",
    "@storybook/react": "6.1.9",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.7.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.2",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
